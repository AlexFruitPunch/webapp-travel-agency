@model List<PacchettoViaggio>
<link href="~/css/site.css" rel="stylesheet"/>
<!--tabella per amministratori webapp-->

    <div class="container">
        <div class="row">
            <div class="col">
                <a href="@Url.Action("Create","PacchettoViaggio")" class="btn btn-success my-4">Aggiungi</a>
            </div>
        </div>
        <div class="row">
            <!--Inizio Tabella-->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <!--nomi delle varie colonne-->
                        <th scope="col">id</th>
                        <th scope="col">Immagine</th>
                        <th scope="col">Destinazione</th>
                        <th scope="col">Numero Ospiti</th>
                        <th scope="col">Stelle Hotel</th>
                        <th scope="col">Tipologia Pensione</th>
                        <th scope="col">Prezzo</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (PacchettoViaggio PacchettiDellaLista in Model)
                        {
                            <tr>
                                <th scope="row">@PacchettiDellaLista.Id</th>
                                <td><img src="@PacchettiDellaLista.Immagine" alt="@PacchettiDellaLista.Destinazione" class="img-fluid h-25"/></td>
                                <td>@PacchettiDellaLista.Destinazione</td>
                                <td>@PacchettiDellaLista.NumerOspiti</td>
                                <td>@PacchettiDellaLista.StelleHotel</td>
                                <td>@PacchettiDellaLista.TipoPensione</td>
                                <td>€ @PacchettiDellaLista.Prezzo</td>

                                <!--Tasto per dettaglio elemento-->
                                <td>
                                    <a href="@Url.Action("DettaglioPacchetto","PacchettoViaggio", new{ id = PacchettiDellaLista.Id})" class="btn btn-info"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                    </svg></a>
                                </td>
                                <!--Tasto per aggiornare il pacchetto-->
                                <td>
                                    <a href="@Url.Action("Aggiorna","PacchettoViaggio", new{ id = PacchettiDellaLista.Id})" class="btn btn-warning"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-counterclockwise" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 0 0-.908-.417A6 6 0 1 0 8 2v1z"/>
                                    <path d="M8 4.466V.534a.25.25 0 0 0-.41-.192L5.23 2.308a.25.25 0 0 0 0 .384l2.36 1.966A.25.25 0 0 0 8 4.466z"/>
                                    </svg></a>
                                </td>
                                <!--Tasto per eliminare il pacchetto-->
                                <td>
                                    <form asp-controller="PacchettoViaggio" asp-action="Cancella" asp-route-id="@PacchettiDellaLista.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                                        </svg></button>
                                    </form>
                                </td>
                            </tr>
                        }
                </tbody>
                </table>
        </div>
    </div>
