@model List<PacchettoViaggio>
<link href="~/css/site.css" rel="stylesheet"/>
<!--tabella per amministratori webapp-->

    <div class="container">
        <div class="row">
            <div class="col">
                <a href="@Url.Action("Create","PacchettoViaggio")" class="btn btn-success my-4">Aggiungi</a>
            </div>
        </div>
        <div class="row">
            <!--Inizio Tabella-->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <!--nomi delle varie colonne-->
                        <th scope="col">id</th>
                        <th scope="col">Immagine</th>
                        <th scope="col">Destinazione</th>
                        <th scope="col">Numero Ospiti</th>
                        <th scope="col">Stelle Hotel</th>
                        <th scope="col">Tipologia Pensione</th>
                        <th scope="col">Prezzo</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (PacchettoViaggio PacchettiDellaLista in Model)
                        {
                            <tr>
                                <th scope="row">@PacchettiDellaLista.Id</th>
                                <td><img src="@PacchettiDellaLista.Immagine" alt="@PacchettiDellaLista.Destinazione" class="img-fluid h-25"/></td>
                                <td>@PacchettiDellaLista.Destinazione</td>
                                <td>@PacchettiDellaLista.NumerOspiti</td>
                                <td>@PacchettiDellaLista.StelleHotel</td>
                                <td>@PacchettiDellaLista.TipoPensione</td>
                                <td>€ @PacchettiDellaLista.Prezzo</td>

                                <!--Tasto per dettaglio elemento-->
                                <td><a href="@Url.Action("DettaglioPacchetto","PacchettoViaggio", new{ id = PacchettiDellaLista.Id})" class="btn btn-info"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                    </svg></a></td>
                                <td></td>
                            </tr>
                        }
                </tbody>
                </table>
        </div>
    </div>
