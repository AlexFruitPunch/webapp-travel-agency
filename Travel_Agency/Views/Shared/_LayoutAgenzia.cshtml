<!doctype html>
<html lang="it">

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet"/>


    <title>Grand Blue Viaggi</title>
  </head>

  <body class="d-flex flex-column min-vh-100">
      <!--Navbar-->
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                      <li class="nav-item active">
                          <!--mettendo nell'href="/" posso far tornare alla pagina principale premendo sul link-->
                          <a class="nav-link" href="/">Home</a>
                      </li>
                      <li class="nav-item active">
                          <a class="nav-link" href="/">Regole per viaggiare</a>
                      </li>
                      <li class="nav-item active">
                          <a class="nav-link" href="/">Chi siamo</a>
                      </li>
                    </ul>
                </div>
        </nav>
    </header>

    <!--qui all'interno verranno messi i codici dei Body-->
    <main>
          @RenderBody()
    </main>

    <!--Footer finale-->
    <footer class="bg-dark mt-auto">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <p class="text-muted mb-0 pt-4">Via Girolamo Fracastoro 75, Milano</p>
                    <p class="text-muted">MI 20128</p>
                    <p class="text-muted pb-4">Copyright &#169; Agenzia di viaggi<strong class="text-muted"> Grand Blue</strong> 2022</p>
                </div>
            </div>
        </div>
    </footer>

    <!--Bootstrap Bundle with Popper -->
